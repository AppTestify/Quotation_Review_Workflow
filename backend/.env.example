# Server Configuration
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/quotation-review

# JWT Secret Key (Change this to a secure random string in production)
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-change-this-in-production

# Frontend URL (Used in email links)
FRONTEND_URL=http://localhost:5173

# Email Configuration
# For Gmail, use:
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
# Note: For Gmail, you need to use an "App Password" instead of your regular password
# Generate one at: https://myaccount.google.com/apppasswords

# For other SMTP servers (SendGrid, Mailgun, etc.), adjust accordingly:
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@quotationreview.com

# Note: If EMAIL_HOST is not set, the system will use console logging for emails (development mode)
